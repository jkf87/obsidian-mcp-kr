{
  "name": "obsidian-mcp-kr",
  "version": "1.0.1",
  "description": "Obsidian vault를 AI 어시스턴트와 연동하는 MCP 서버 (한국어 지원)",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "obsidian-mcp-kr": "./build/main.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    },
    "./cli": {
      "types": "./build/main.d.ts",
      "import": "./build/main.js"
    },
    "./server": {
      "types": "./build/server.d.ts",
      "import": "./build/server.js"
    },
    "./types": {
      "types": "./build/types.d.ts",
      "import": "./build/types.js"
    },
    "./tools/*": {
      "types": "./build/tools/*/index.d.ts",
      "import": "./build/tools/*/index.js"
    },
    "./utils/*": {
      "types": "./build/utils/*.d.ts",
      "import": "./build/utils/*.js"
    },
    "./resources/*": {
      "types": "./build/resources/*.d.ts",
      "import": "./build/resources/*.js"
    }
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "dependencies": {
    "yaml": "^2.6.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@types/bun": "latest"
  },
  "scripts": {
    "build": "tsc && chmod +x build/main.js",
    "start": "node build/main.js",
    "prepublishOnly": "npm run build",
    "inspect": "bunx @modelcontextprotocol/inspector node ./build/main.js"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "ai",
    "notes",
    "knowledge-management",
    "korean"
  ],
  "author": "conanssam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkf87/obsidian-mcp-kr"
  },
  "engines": {
    "node": ">=16"
  }
}
